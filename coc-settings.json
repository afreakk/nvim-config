{
    "yaml.trace.server": "verbose",
    "yaml.format.enable": true,
    "yaml.schemas": {
        "https://json.schemastore.org/kustomization.json": [
            "kustomization.yaml",
            "kustomization.yml"
        ]
    },
    "snippets.textmateSnippetsRoots": [
        "/home/afreak/.config/nvim/vscodesnippets"
    ],
    "coc.source.around.priority": 80,
    "coc.source.buffer.priority": 70,
    "coc.source.file.priority": 60,
    "yaml.schemaStore.enable": true,
    "codeLens.enable": false,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.virtualText": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.file.reveal.auto": true,
    "explorer.trash.command": "trash-put %s",

    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "cSpell.language": "en-US,nb",
    "cSpell.allowCompoundWords": true,
    "cSpellExt.enableDictionaries": ["norwegian"],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "myExtraWords",
            "path": "/home/afreak/random/myExtraWords.txt"
        }
    ],
    "cSpell.dictionaries": ["myExtraWords"],
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck",
        "markdown": ["write-good", "markdownlint"]
    },
    "diagnostic-languageserver.formatFiletypes": {
        "starlark": "buildifier",
        "nix": "nixpkgs-fmt"
    },
    "diagnostic-languageserver.formatters": {
        "buildifier": {
            "command": "buildifier"
        },
        "nixpkgs-fmt": {
            "command": "nixpkgs-fmt"
        }
    },
    "suggest.insertMode": "insert",
    "coc.preferences.formatOnSave": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "sumneko-lua.checkUpdate": false,
    "sumneko-lua.serverDir": "/home/afreak/.local/share/sumneko-lua-language-server/share/lua-language-server",
    "Lua.misc.parameters": [
        "--metapath",
        "~/.cache/sumneko_lua/meta",
        "--logpath",
        "~/.cache/sumneko_lua/log"
    ],
    "Lua.workspace.library": [
        "/home/afreak/.local/share/nvim/lazy/noice.nvim/lua/noice"
    ],

    "languageserver": {
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": ["cs"],
            "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        },
        "graphql": {
            "command": "graphql-lsp",
            "args": ["server", "-m", "stream"],
            "filetypes": ["graphql"]
        },
        "nix": {
            "command": "rnix-lsp",
            "filetypes": ["nix"]
        },
        "terraform": {
            "command": "terraform-ls",
            "filetypes": ["terraform", "tf"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml"
            ],
            "filetypes": ["hs", "lhs", "haskell"],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true,
                    "maxNumberOfProblems": 10,
                    "completionSnippetsOn": true
                }
            }
        },
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"],
            "initializationOptions": {
                "elmFormatPath": "elm-format",
                "elmTestPath": "elm-test",
                "elmReviewPath": "elm-review",
                "trace": {
                    "server": true
                }
            }
        }
    }
}

{
    "yaml.trace.server": "verbose",
    "yaml.format.enable": true,
    "yaml.schemas": {
        "https://json.schemastore.org/kustomization.json": [
            "kustomization.yaml",
            "kustomization.yml"
        ]
    },
    "yaml.schemaStore.enable": true,
    "codeLens.enable": true,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.virtualText": true,
    "diagnostic.hintSign": "",
    "omnisharp.trace.server": "verbose",
    "omnisharp.path": "omnisharp",
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.file.reveal.auto": true,
    "explorer.trash.command": "trash-put %s",

    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "cSpell.language": "en-US,nb",
    "cSpell.allowCompoundWords": true,
    "cSpellExt.enableDictionaries": ["norwegian"],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "myExtraWords",
            "path": "/home/afreak/random/myExtraWords.txt"
        }
    ],
    "cSpell.dictionaries": ["myExtraWords"],
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck",
        "markdown": ["write-good", "markdownlint"]
    },
    "diagnostic-languageserver.formatFiletypes": {
        "starlark": "buildifier",
        "nix": "nixpkgs-fmt"
    },
    "diagnostic-languageserver.formatters": {
        "buildifier": {
            "command": "buildifier"
        },
        "nixpkgs-fmt": {
            "command": "nixpkgs-fmt"
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "go",
        "starlark",
        "javascript",
        "typescript",
        "typescriptreact",
        "json",
        "javascriptreact",
        "less",
        "svelte",
        "rust",
        "elm",
        "nix"
    ],
    "tsserver.trace.server": "verbose",
    "languageserver": {
        "lua": {
            "rootPatterns": [".git/"],
            "command": "lua-language-server",
            "filetypes": ["lua"],
            "settings": {
                "Lua": {
                    "workspace": {
                        "library": [
                            "/nix/store/g7bf2fpkn6h4fcz52bwka22zrz09m46v-neovim-0.7.0/share/nvim/runtime/lua"
                        ]
                    },
                    "diagnostics": {
                        "globals": ["vim"]
                    }
                }
            }
        },
        "graphql": {
            "command": "graphql-lsp",
            "args": ["server", "-m", "stream"],
            "filetypes": ["graphql"]
        },
        "nix": {
            "command": "rnix-lsp",
            "filetypes": ["nix"]
        },
        "terraform": {
            "command": "/nix/store/6hn07zrp44srvgxp9jys4h903lcrbqmm-terraform-ls-0.18.1/bin/terraform-ls",
            "filetypes": ["terraform", "tf"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml"
            ],
            "filetypes": ["hs", "lhs", "haskell"],
            "initializationOptions": {
                "languageServerHaskell": {}
            }
        },
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"],
            "initializationOptions": {
                "elmAnalyseTrigger": "change",
                "elmFormatPath": "elm-format",
                "elmTestPath": "elm-test",
                "elmReviewPath": "elm-review"
            }
        }
    },
    "cSpell.userWords": [
        "Authn",
        "fmap",
        "nixpkgs",
        "stretchr",
        "totp",
        "xmobar"
    ]
}
